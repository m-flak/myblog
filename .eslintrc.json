{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "brace-style": "off",
        "camelcase": "off",
        "comma-dangle": "warn",
        "indent": "off",
        "object-curly-spacing": "warn",
        "prefer-const": "warn",
        "quotes": "warn",
        "semi": "off",
        "space-before-function-paren": "warn"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
